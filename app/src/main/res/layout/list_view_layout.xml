<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="125"
        android:weightSum="100">

        <ImageView
            android:id="@+id/category_image_show"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="25"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">

    <TextView
            android:id="@+id/listView_titleText"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:text="Title"
            />


        <TextView
            android:id="@+id/listView_amountText"
            android:gravity="center"
            android:textAlignment="center"
            android:text="5000"
            android:layout_width="match_parent"
            android:layout_height="30dp"  />

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">

        <TextView
            android:id="@+id/listView_category"
            android:gravity="center"
            android:text="category"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:id="@+id/listView_calendar"
            android:gravity="center"
            android:text="2020-02-02"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/listView_amount"
            />


    </LinearLayout>




</LinearLayout>